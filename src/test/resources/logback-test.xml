<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
<!--    Only show INFO Level Logs from Karate-->
    <logger name="com.intuit.karate" level="INFO"/>

<!--    Only prints messages to console from feature files    -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>